<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <include
        android:id="@+id/common_actionbar"
        layout="@layout/include_action_bar" />

    <RelativeLayout
        android:id="@+id/adcontainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        >
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/common_entry_item_bg"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp" >

        <EditText
            android:id="@+id/et_opera"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="top"
            android:background="@drawable/base_edit_input" 
            android:padding="5dp"/>

    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/common_entry_item_bg"
        android:padding="5dp"
        android:layout_marginTop="10dp">
       <!--  <CheckBox android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/use_fund"
            android:text="@string/use_fund"
            android:textColor="@color/blue_press"
            android:textSize="16sp"
            /> -->
        
        <EditText android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="@string/use_fund_hint"
            android:layout_marginLeft="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:inputType="numberDecimal"
            android:id="@+id/et_use_fund"/>
        
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="å…ƒ"
            android:layout_marginLeft="8dp"
            android:ellipsize="end"
            android:textColor="@color/blue_press"
            android:textSize="16sp"
            />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/common_entry_item_bg"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp" >

        <org.market.tool.view.AlbumView
            android:id="@+id/albumview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp" >
        </org.market.tool.view.AlbumView>
    </LinearLayout>

</LinearLayout>